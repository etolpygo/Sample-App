<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset1">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', :object => @user %>

      <%= f.label :name %>
      <%= f.text_field :name, :class => 'input-medium' %>

      <%= f.label :email %>
      <%= f.text_field :email, :class => 'input-medium' %>

      <%= f.label :password %>
      <%= f.password_field :password, :class => 'input-medium' %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, :class => 'input-medium' %>
	  <br />
      <%= f.submit "Save changes", class: "btn btn-large btn-teal" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>